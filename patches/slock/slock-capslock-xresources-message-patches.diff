+static void
+writemessage(Display *dpy, Window win, int screen)
+{
+    XftDraw *draw;
+    XftFont *font;
+    XftColor color;
+    Visual *visual;
+    Colormap cmap;
+    int x, y;
+    XGlyphInfo extents;
+
+    visual = DefaultVisual(dpy, screen);
+    cmap   = DefaultColormap(dpy, screen);
+
+    font = XftFontOpenName(dpy, screen, font_name);
+    if (!font)
+        return;
+
+    if (!XftColorAllocName(dpy, visual, cmap, text_color, &color)) {
+        XftFontClose(dpy, font);
+        return;
+    }
+
+    draw = XftDrawCreate(dpy, win, visual, cmap);
+
+    XftTextExtentsUtf8(
+        dpy, font,
+        (FcChar8 *)message,
+        strlen(message),
+        &extents
+    );
+
+    x = (DisplayWidth(dpy, screen) - extents.width) / 2;
+    y = (DisplayHeight(dpy, screen) + extents.height) / 2;
+
+    XftDrawStringUtf8(
+        draw, &color, font,
+        x, y,
+        (FcChar8 *)message,
+        strlen(message)
+    );
+
+    XftDrawDestroy(draw);
+    XftColorFree(dpy, visual, cmap, &color);
+    XftFontClose(dpy, font);
+}
